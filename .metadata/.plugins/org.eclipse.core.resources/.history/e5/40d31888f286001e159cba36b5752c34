package main;

import java.util.Scanner;
import java.util.*;
import negocio.*;

public class Main {
    public static void main(String[] args) {
        Sistema sistema = new Sistema();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("\n1. Cadastrar Usuário");
            System.out.println("2. Remover Usuário");
            System.out.println("3. Listar Usuários");
            System.out.println("4. Acessar Usuário");
            System.out.println("5. Sair");
            System.out.print("Escolha uma opção: ");

            int opcao = scanner.nextInt();

            switch (opcao) {
                case 1:
                    System.out.print("Digite o nome do usuário: ");
                    String nomeUsuario = scanner.next();
                    Usuario novoUsuario = new Usuario(nomeUsuario);
                    sistema.cadastrarUsuario(novoUsuario);
                    break;

                case 2:
                    // Operações para remover usuário
                    // ...

                    break;

                case 3:
                    sistema.listarUsuarios();
                    break;

                case 4:
                    System.out.print("Digite o nome do usuário: ");
                    String nomeAcessarUsuario = scanner.next();
                    Usuario usuarioSelecionado = sistema.buscarUsuario(nomeAcessarUsuario);

                    if (usuarioSelecionado != null) {
                        realizarOperacoesNoUsuario(usuarioSelecionado, scanner);
                    } else {
                        System.out.println("Usuário não encontrado.");
                    }
                    break;

                case 5:
                    System.out.println("Saindo do programa.");
                    System.exit(0);

                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
        }
    }

    private static void realizarOperacoesNoUsuario(Usuario usuario, Scanner scanner) {
        while (true) {
            System.out.println("\nOperações no Usuário '" + usuario.getNome() + "':");
            System.out.println("1. Adicionar Repositório");
            System.out.println("2. Remover Repositório");
            System.out.println("3. Listar Repositórios");
            System.out.println("4. Voltar ao Menu Principal");
            System.out.print("Escolha uma opção: ");

            int opcaoUsuario = scanner.nextInt();

            switch (opcaoUsuario) {
                case 1:
                    System.out.print("Digite o nome do repositório: ");
                    String nomeRepositorio = scanner.next();
                    Repositorio novoRepositorio = new Repositorio(nomeRepositorio);
                    usuario.adicionarRepositorio(novoRepositorio);
                    System.out.println("Repositório adicionado com sucesso.");
                    break;

                case 2:
                    System.out.print("Digite o nome do repositório a ser removido: ");
                    String nomeRemoverRepositorio = scanner.next();
                    usuario.removerRepositorio(nomeRemoverRepositorio);
                    break;

                case 3:
                    Repositorio[] repositoriosUsuario = usuario.getRepositorios();
                    System.out.println("Repositórios do Usuário '" + usuario.getNome() + "':");
                    for (Repositorio repositorio : repositoriosUsuario) {
                        if (repositorio != null) {
                            System.out.println(repositorio.getNome());
                        }
                    }
                    break;

                case 4:
                    return;

                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
        }
    }
}